{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/api/*": ["app/api/*"],
      "@/components/*": ["app/components/*"],
      "@/content/*": ["app/(routes)/*"],
      "@/lib/*": ["app/lib/*"],
      "@/styles/*": ["app/styles/*"],
      "@/types/*": ["app/types/*"],
      "@/utils/*": ["app/utils/*"],
      "@/public/*": ["public/*"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
